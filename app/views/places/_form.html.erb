<%= simple_form_for @place, html: { multipart: true } do |f| %>
  <%= f.input :name, class: 'form-control' %>
  <%= f.input :category, class: 'form-control' %>
  <%= f.input :dogginess_scale, class: 'form-control' %>

  <%= f.fields_for :place_photos do |p| %>
    <div class="field">
      <%= f.label :photo %>
      <br>
      <%= f.file_field :photo, multiple: true %>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
