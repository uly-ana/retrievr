  <div class="row center">
    <div class="form-event">
      <h2>Add Your Dog</h2>
      <%= simple_form_for [@user, @dog] do |f| %>
        <%= f.input :name,
                    required: true %>
        <%= f.input :my_story,
                    required: true %>
        <%= f.input :breed,
                    required: true %>
        <%= f.input :dog_size, collection: @dog_size %> 
        <%= f.input :dog_size, collection: @dog_size %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="form-actions">
          <%= f.button :submit, "Add doggo" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
