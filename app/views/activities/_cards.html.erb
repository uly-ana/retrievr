<% @activities.each do |activity| %>
  <%= link_to activity_path(activity), class: 'activity-link' do %>
    <div class="card" data-activity-id="<%= activity.id %>" style="background-image: url('<%= cl_image_path activity.activity_photos.first.photo, crop: :fill %>')" >
      <div class="card-content">
        <div class="card-name">
          <h3><%= activity.name %></h3>
        </div>
        <div class="card-description">
          <p>
            By: <%= activity.owner.first_name %> <%= activity.owner.last_name %>
          </p>
        </div>
        <div class="card-action">
          <i class="far fa-arrow-alt-circle-right"></i>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
